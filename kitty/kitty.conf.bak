# ==========================================
# ОБЩИЕ НАСТРОЙКИ КОНСОЛИ 
# ==========================================
shell .                           
editor nvim
scrollbar never
# Вызов neovim для выделения вывода консоли (Ctrl+Shift+h)
scrollback_pager nvim -c "set nonumber nolist showtabline=0 foldcolumn=0" -c "autocmd TermOpen * stopinsert | normal! G" -c "silent write! /tmp/kitty_scrollback | te cat /tmp/kitty_scrollback - "
# Помнить 10000 строк вывода
scrollback_lines 10000            
# Отключить звуковой сигнал
enable_audio_bell no
# ==========================================
# ШРИФТЫ
# ==========================================
font_family      Hack Nerd Font
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size 12.0
# ==========================================
# ОКНО И ВИД
# ==========================================
sync_to_monitor yes
# Прозрачность (0.8 = 80%)
background_opacity 0.8            
# Отступы внутри окна (красиво для тайлинга и прозрачности)
window_padding_width 10           
# Не спрашивать подтверждение при закрытии окна
confirm_os_window_close 0         
# Запоминать размер окна при перезапуске
remember_window_size  no
# Приглушить текст в неактивном окне
inactive_text_alpha 0.3

# ==========================================
# ЦВЕТОВАЯ СХЕМА (One Dark Vivid)
# ==========================================
# Нейтральный темно-серый фон
background #1e2127
foreground #abb2bf

selection_background #3e4452
selection_foreground #abb2bf

cursor #528bff
cursor_text_color background

# Рамки
active_border_color #61afef
inactive_border_color #282c34

# Вкладки
active_tab_foreground #282c34
active_tab_background #98c379
inactive_tab_foreground #abb2bf
inactive_tab_background #282c34

# 16 цветов

# Black (Тот самый нейтральный серый для комментариев)
color0 #282c34
color8 #5c6370

# Red
color1 #e06c75
color9 #e06c75

# Green
color2 #98c379
color10 #98c379

# Yellow
color3 #e5c07b
color11 #e5c07b

# Blue
color4 #61afef
color12 #61afef

# Magenta
color5 #c678dd
color13 #c678dd

# Cyan
color6 #56b6c2
color14 #56b6c2

# White
color7 #abb2bf
color15 #ffffff

  
